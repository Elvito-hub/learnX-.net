    <div class="flex flex-col justify-center overflow-hidden rounded-lg shadow-lg mx-4 my-2">
        <div class="flex-shrink-0 w-[100px] bg-blue-700 text-white w-full">
            Question
        </div>
        <div class="flex flex-col justify-between flex-1 p-6 bg-white">
            <div class="flex-1">
                <a href="#" class="block mt-2">
                    <p class="mt-3 text-base text-gray-500">@Html.Raw(Model.cm.content)</p>
                </a>
            </div>
            <div class="flex items-center mt-6">
                <div class="ml-3">
                    <p class="text-sm font-medium text-neutral-600">
                        <a class="hover:underline">@Model.cm.creatorUsername</a>
                    </p>
                    <div class="flex space-x-1 text-sm text-gray-500">
                        <time datetime="2020-03-16">@Model.cm.dateCreated</time>
                        <span aria-hidden="true"> · </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @foreach (var fac in Model.comments)
    {
        <div class="flex flex-col justify-center overflow-hidden rounded-lg shadow-lg mx-4 my-2">
            <div class="flex-shrink-0 w-[100px] bg-green-700 text-white w-full">
                Comment
            </div>
            <div class="flex flex-col justify-between flex-1 p-6 bg-white">
                <div class="flex-1">
                    <a href="#" class="block mt-2">
                        <p class="mt-3 text-base text-gray-500">@Html.Raw(fac.content)</p>
                    </a>
                </div>
                <div class="flex items-center mt-6">
                    <div class="ml-3">
                        <p class="text-sm font-medium text-neutral-600">
                            <a class="hover:underline">@fac.creatorUsername</a>
                        </p>
                        <div class="flex space-x-1 text-sm text-gray-500">
                            <time datetime="2020-03-16">@fac.dateCreated</time>
                            <span aria-hidden="true"> · </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <form method="post">
        @if (Model.message.Length > 0)
        {
            <div class="alert alert-info">
                @Model.message
            </div>
        }
        <div class="form-group">
            <textarea type="text" class="form-control" id="tiny" name="article" placeholder="Enter comment"></textarea>
        </div>
        <button type="submit" class="flex items-center justify-center w-full px-10 py-4 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Comment</button>
    </form>
</section>



